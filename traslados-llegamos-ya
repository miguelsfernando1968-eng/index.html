  <script>
    // Contador de visitas (localStorage). Nota: esto cuenta por navegador/usuario. Para un contador global requiere backend.
    (function(){
      try{
        const key = 'llegamosya_visitas_total_v1';
        let v = localStorage.getItem(key);
        if(!v) v = 0;
        v = Number(v) + 1;
        localStorage.setItem(key, String(v));
        document.getElementById('visitas').textContent = v;
        document.getElementById('visitasFooter').textContent = v;
      }catch(e){
        console.warn('No se pudo acceder a localStorage para el contador');
      }
    })();

    // Manejo del formulario: guardamos envíos en localStorage y mostramos confirmación.
    const form = document.getElementById('mainForm');
    const msg = document.getElementById('formMsg');
    form.addEventListener('submit', function(e){
      e.preventDefault();
      const data = {
        nombre: form.name.value.trim(),
        telefono: form.phone.value.trim(),
        email: form.email.value.trim(),
        direccion: form.address.value.trim(),
        tipo: form.type.value,
        detalles: form.details.value.trim(),
        fecha: new Date().toISOString()
      };

      // Guardar en localStorage (lista de envíos)
      try{
        const key = 'llegamosya_envios_v1';
        const list = JSON.parse(localStorage.getItem(key) || '[]');
        list.push(data);
        localStorage.setItem(key, JSON.stringify(list));
        msg.style.display = 'block';
        msg.style.color = 'lightgreen';
        msg.textContent = 'Pedido guardado localmente. En breve te contactaremos por WhatsApp.';

        // Opcional: abrir WhatsApp con mensaje prellenado
        const waNumber = '598XXXXXXXX'; // reemplazar por número real sin signos
        const text = encodeURIComponent(`Hola, soy ${data.nombre}. Solicito traslado: ${data.tipo}. Tel: ${data.telefono}. Dirección: ${data.direccion}. Detalles: ${data.detalles}`);
        // No abrir de forma automática para respetar UX; se muestra botón para abrir
        const openWa = confirm('¿Querés abrir WhatsApp para enviar el pedido ahora?');
        if(openWa){
          window.open(`https://wa.me/${waNumber}?text=${text}`, '_blank');
        }

        form.reset();
      }catch(err){
        console.error(err);
        msg.style.display = 'block';
        msg.style.color = '#ff8a8a';
        msg.textContent = 'Ocurrió un error al guardar el pedido en el navegador.';
      }
    });

    document.getElementById('clearBtn').addEventListener('click', function(){
      if(confirm('Limpiar el formulario?')) form.reset();
    });

    // Vincular botones rápidos a acciones en la página
    document.getElementById('btnSolicitar').addEventListener('click', ()=>{
      document.getElementById('name').focus();
      window.scrollTo({top:document.getElementById('mainForm').offsetTop-20,behavior:'smooth'});
    });
    document.getElementById('btnCotizar').addEventListener('click', ()=>{
      alert('Para cotizar completá el formulario indicando peso/dimensiones. Te contactaremos por WhatsApp.');
    });
    document.getElementById('btnSeguimiento').addEventListener('click', ()=>{
      alert('El seguimiento se coordina por WhatsApp. Envianos tu número y código de pedido (si lo tenés).');
    });
    document.getElementById('btnContacto').addEventListener('click', ()=>{
      window.location.href = 'mailto:contacto@llegamosya.example';
    });

    // Accesibilidad: focus visible
    document.addEventListener('keydown', function(e){
      if(e.key === 'Tab') document.documentElement.style.scrollBehavior = 'smooth';
    });
  </script>
